@model MVC.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="container px-0">
        <h2>Prijava korisnika</h2>
    </div>
    @using (Html.BeginForm("Index", "Login", null, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "")
        <div class="mb-3">
            @Html.LabelFor(m => m.UserName)
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.UserName, "")
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PasswordHash)
            @Html.EditorFor(m => m.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.PasswordHash)
        </div>
        <div class="mb-3 px-0 form-check">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>

